    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "useUnknownInCatchVariables": false,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": ["src/**/*.ts"],
